<h2 class='mb-5'>{{data.username}}</h2>
<div class='d-flex flex-column align-items-center container'>
  {{#if data.posts}}
  <h3>Your posts</h3>
  {{#each data.posts as |post|}}
    {{#with post}}
      {{>post}}
    {{/with}}
  {{/each}}
  {{/if}}
  <a type='click' class='btn btn-secondary my-4 mb-5' href='/new-post'>Write a new post</a>
  {{#if data.comments}}
  <h3>Your comments</h3>
  {{#each data.comments as |comment|}}
    <div data-post-id='{{comment.post.id}}' class='container card col-7 m-1 post-card'>
      <div
        class='card-body d-flex flex-column justify-content-between container'
      >
        <div class='d-flex justify-content-between container'>
          <div class='d-flex flex-column'>
            <h2 class='card-title h5'>{{comment.post.title}}</h2>
            <h3 class='card-subtitle text-muted h6'>{{comment.post.user.username}}</h3>
          </div>
          <div class='d-flex flex-column align-items-end'>
            <small class='text-sm text-muted'>Updated:
              {{formatTimestamp comment.updatedAt}}</small>
            <small class='font-italic text-muted'>Created:
              {{formatTimestamp comment.createdAt}}</small>
          </div>
        </div>
        <div class="card border-info m-1">
        <p class='card-text m-3'>{{comment.body}}</p>
        </div>
      </div>
    </div>
  {{/each}}
  {{/if}}
</div>
<script src='../js/post.js'></script>
