<h2 class='h3'>Sign in</h2>
<form id='login-form' class='d-flex flex-column col-2'>
  <div class='form-group my-2'>
    <label for='login-name' class='text-muted'>Username or email</label>
    <input
      type='text'
      class='form-control'
      id='login-name'
      placeholder='What you call yourself online'
      required
    />
  </div>
  <div class='form-group my-2'>
    <label for='login-pass' class='text-muted'>Password</label>
    <input
      type='password'
      class='form-control'
      id='login-pass'
      placeholder='Super secret password'
      required
    />
  </div>
  <button type='submit' class='btn btn-secondary my-2'>Sign in</button>
</form>
<a id='signup-btn' href='/signup'>New around here? Sign up to post and comment.</a>

<script src='../js/login.js'></script>
