{{! Post body is no longer truncated }}
<div class='d-flex flex-column align-items-center container'>
  <div
    data-post-id='{{post.id}}'
    class='container card col-7 m-1 border-info'
    id='post'
  >
    <div
      class='card-body d-flex flex-column justify-content-between align-items-center container'
    >
      <div class='d-flex justify-content-between container'>
        <div class='d-flex flex-column'>
          <h2 class='card-title h5'>{{post.title}}</h2>
          <h3 class='card-subtitle text-muted h6'>{{post.user.username}}</h3>
        </div>
        <div class='d-flex flex-column align-items-end'>
          <small class='text-sm text-muted'>Updated:
            {{formatTimestamp post.updatedAt}}</small>
          <small class='font-italic text-muted'>Created:
            {{formatTimestamp post.createdAt}}</small>
        </div>
      </div>
      <p class='card-text m-3'>{{post.body}}</p>
      {{#each post.comments as |comment|}}
        <div data-post-id='{{post.id}}' class='container card m-1'>
          <div
            class='card-body d-flex flex-column justify-content-between container'
          >
            <div class='d-flex justify-content-between container'>
              <div class='d-flex flex-column'>
                <h2 class='card-title h5'>{{comment.title}}</h2>
                <h3
                  class='card-subtitle text-muted h6'
                >{{comment.user.username}}</h3>
              </div>
              <div class='d-flex flex-column align-items-end'>
                <small class='text-sm text-muted'>Updated:
                  {{formatTimestamp comment.updatedAt}}</small>
                <small class='font-italic text-muted'>Created:
                  {{formatTimestamp comment.createdAt}}</small>
              </div>
            </div>
            <p class='card-text m-3'>{{comment.body}}</p>
          </div>
        </div>
      {{/each}}
      <button class='btn btn-secondary my-4 mb-5' id='new-comment-btn'>Write a
        new comment</button>

      <form
        id='new-comment-form'
        class='d-flex flex-column d-none col-11 border-success card p-3 m-2'
      >
        <div class='form-group my-2'>
          <label for='post-title' class='text-muted'>New comment</label>
          <textarea
            class='form-control'
            id='comment-body'
            rows='6'
            placeholder='Type your comment here'
            required
          ></textarea>
        </div>
        <button type='submit' class='btn btn-secondary my-2'>Publish comment</button>
      </form>
    </div>
  </div>
</div>

<script src='../js/new-comment.js'></script>
