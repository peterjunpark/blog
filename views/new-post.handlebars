<form id='new-post-form' class='d-flex flex-column col-3'>
  <div class='form-group my-2'>
    <label for='post-title' class='text-muted'>New post</label>
    <input
      type='text'
      class='form-control'
      id='post-title'
      placeholder='Title'
    />
  </div>
  <div class='form-group my-2'>
    <textarea
      class='form-control'
      id='post-body'
      rows='6'
      placeholder='Type your post here'
    ></textarea>
  </div>
  <button type='submit' class='btn btn-secondary my-2'>Publish post</button>
</form>

<script src='../js/new-post.js'></script>
