<div
  data-post-id='{{id}}'
  class='post-card container card col-7 m-1 border-info'
>
  <div class='card-body d-flex flex-column justify-content-between container'>
    <div class='d-flex justify-content-between container'>
      <div class='d-flex flex-column'>
        <h2 class='card-title h5'>{{title}}</h2>
        <h3 class='card-subtitle text-muted h6'>{{user.username}}</h3>
      </div>
      <div class='d-flex flex-column align-items-end'>
        <small class='text-sm text-muted'>Updated:
          {{formatTimestamp updatedAt}}</small>
        <small class='font-italic text-muted'>Created:
          {{formatTimestamp createdAt}}</small>
      </div>
    </div>
    <p class='card-text text-truncate m-3'>{{body}}</p>
  </div>
</div>
